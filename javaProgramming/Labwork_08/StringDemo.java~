public class StringDemo {

    public static void main(String[] args) {
        String a = "whatever";
        String b = "Hello World";
        String c = "Super Mario";

        // charAt
        System.out.println("charAt .....");
        System.out.println(a.charAt(0));
        System.out.println(b.charAt(4));
        System.out.println(c.charAt(2));

        // length
        System.out.println("lenght....");
        System.out.println(a.length());
        System.out.println(b.length());
        System.out.println(c.length());

        System.out.println("format......");
        System.out.println(String.format("int - %d, double %f",2,3.4));
        System.out.println(String.format("int - %d, double %f",20,34.4));
        System.out.println(String.format("int - %d, double %f",22,3.442));

        System.out.println("substring.........");
        System.out.println(a.substring(2));
        System.out.println(b.substring(2));
        System.out.println(c.substring(2));

        System.out.println("substring range...");
        System.out.println(a.substring(2,5));
        System.out.println(b.substring(2,5));
        System.out.println(c.substring(2,5));

        System.out.println("contains");
        System.out.println(a.contains(b));
        System.out.println(a.contains("ever"));
        System.out.println(c.contains("mario"));

        System.out.println("join....");
        System.out.println(String.join(",","one","two","three"));
        System.out.println(String.join("->","one","two","three"));
        System.out.println(String.join(" next ","one","two","three"));

        System.out.println("equals .......");
        System.out.println("comparing a and b" + a.equals(b));
        System.out.println(c.equals("Super Mario"));
        System.out.println("comparing and c" + a.equals(c));

        System.out.println("isEmpty()");
        System.out.println("".isEmpty());
        System.out.println(a.isEmpty());
        System.out.println("to".isEmpty());

        System.out.println("concat");
        System.out.println(a.concat(b));
        System.out.println(a.concat(c));
        System.out.println(b.concat(c));

        System.out.println("replace ....");
        System.out.println(a.replace('w','q'));
        System.out.println(a.replace('w','Y'));
        System.out.println(a.replace('a','y'));

        System.out.println("split ......");
        System.out.println("a,b,c,csv split,demo".split(","));
        System.out.println("toaavetaasoaaseparated by aa".split("aa"));
        System.out.println("a-b-c- hiphen split,demo".split("-"));

        System.out.println("intern...");
        System.out.println(a.intern());
        System.out.println(b.intern());
        System.out.println(c.intern());

        System.out.println("indexOf .....");
        System.out.println(a.indexOf('h'));
        System.out.println(b.indexOf('h'));
        System.out.println(c.indexOf('h'));

        System.out.println("lowercase ...");
        System.out.println(a.toLowerCase());
        System.out.println(b.toLowerCase());
        System.out.println(c.toLowerCase());

        System.out.println("uppercase ...");
        System.out.println(a.toUpperCase());
        System.out.println(b.toUpperCase());
        System.out.println(c.toUpperCase());

        System.out.println("trim ....");
        System.out.println("   remove trailing spaces  ".trim());
        System.out.println(a.trim());
        System.out.println("  remove".trim());

        System.out.println("value of ....");
        System.out.println(String.valueOf(4));
        System.out.println(String.valueOf(4.55));
        System.out.println(String.valueOf(new Object()));
    }
}

